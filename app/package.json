{
  "name": "app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "db-server": "npx json-server --watch ./mock/db.json",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest run --coverage --coverage.enabled=true",
    "test:watch": "vitest --watch",
    "lint": "eslint . --quiet",
    "lint:fix": "eslint --fix",
    "lint:eslint": "eslint --cache",
    "lint:tsc": "tsc --project tsconfig.json --noEmit",
    "lint:ts-coverage": "type-coverage",
    "type-check": "tsc --noEmit",
    "ts-coverage": "typescript-coverage-report --project tsconfig.json --outputDir ts-coverage",
    "ts-coverage-report": "tsc --noEmit --listFiles | grep '.ts$' | xargs -I {} nyc --reporter=text-summary tsc --noEmit --skipLibCheck",
    "build": "tsc -b && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "classnames": "^2.5.1",
    "dayjs": "^1.11.13",
    "dotenv": "^16.5.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-modal": "^3.16.3",
    "react-select": "^5.10.1",
    "react-stripe-checkout": "^2.6.3",
    "react-toastify": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^7.0.0",
    "@eslint/eslintrc": "^3.3.1",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "22.13.11",
    "@types/react-modal": "^3.16.3",
    "@typescript-eslint/parser": "^8.27.0",
    "@vitest/coverage-v8": "3.0.9",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-testing-library": "^7.1.1",
    "jsdom": "^26.0.0",
    "json-server": "^1.0.0-beta.3",
    "sass": "^1.86.0",
    "sass-loader": "^16.0.5",
    "type-coverage": "^2.29.7",
    "typescript-coverage-report": "1.1.1",
    "vitest": "^3.0.9"
  },
  "typeCoverage": {
    "atLeast": 90
  }
}
