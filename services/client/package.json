{
  "name": "client",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "db-server": "npx json-server --watch ./mock/db.json",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint . --quiet",
    "lint:fix": "eslint --fix",
    "test-coverage-report": "vitest --coverage --coverageReporters=text-summary",
    "lint:eslint": "eslint --cache",
    "lint:tsc": "tsc --project tsconfig.json --noEmit",
    "lint:ts-coverage": "type-coverage",
    "type-check": "tsc --noEmit",
    "ts-coverage": "type-coverage",
    "ts-coverage-report": "tsc --noEmit --listFiles | grep '.ts$' | xargs -I {} nyc --reporter=text-summary tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "classnames": "^2.5.1",
    "dotenv": "^16.4.7",
    "next": "^15.2.4",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-icons": "^5.5.0",
    "react-modal": "^3.16.3",
    "react-select": "^5.10.1",
    "react-stripe-checkout": "^2.6.3",
    "react-toastify": "^11.0.5",
    "typescript": "^5.8.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.23.0",
    "@next/eslint-plugin-next": "^15.2.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "22.13.11",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@types/react-modal": "^3.16.3",
    "@typescript-eslint/parser": "^8.27.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "3.0.9",
    "eslint": "^9.23.0",
    "eslint-config-next": "^15.2.3",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-testing-library": "^7.1.1",
    "globals": "^16.0.0",
    "jsdom": "^26.0.0",
    "json-server": "^1.0.0-beta.3",
    "sass": "^1.86.0",
    "sass-loader": "^16.0.5",
    "type-coverage": "^2.29.7",
    "typescript-eslint": "^8.27.0",
    "vitest": "^3.1.1"
  }
